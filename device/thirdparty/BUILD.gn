import("//build/config/features.gni")
import("//mojo/public/tools/bindings/mojom.gni")
import("//build/config/highweb.gni")

component("thirdparty") {
  output_name = "device_thirdparty"

  sources = [
    "devicethirdparty_export.h",
    "devicethirdparty_manager_impl.h",
    "devicethirdparty_manager_impl_default.cc",
  ]

  defines = [ "DEVICE_THIRDPARTY_IMPLEMENTATION" ]

  deps = [
    ":mojo_bindings",
    "//base",
    "//base/third_party/dynamic_annotations",
    "//mojo/edk/system",
    "//mojo/public/cpp/bindings",
  ]

  if (is_android) {
    sources -= [ "devicethirdparty_manager_impl_default.cc" ]
  }
}

mojom("mojo_bindings") {
  sources = [
    "devicethirdparty_manager.mojom",
  ]
}
