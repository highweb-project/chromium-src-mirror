typedef long VKCResult;
typedef unsigned long VKCuint;
typedef int VKCint;
typedef unsigned long VKCenum;

interface WebVKCDevice {
	[CallWith=ScriptState, RaisesException] any getInfo(VKCenum name);
	[RaisesException] WebVKCBuffer createBuffer(VKCuint sizeInBytes);
	[RaisesException] WebVKCCommandQueue createCommandQueue();
	[RaisesException] WebVKCProgram createProgram(DOMString shaderPath, VKCuint useBufferCount);
	[RaisesException] WebVKCProgram createProgramWithShaderCode(DOMString shaderCode, VKCuint useBufferCount);
	[RaisesException] void submit(WebVKCCommandQueue commandBuffer);
	[RaisesException] void wait();
	[RaisesException] void release();
};
